{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended",
        "tslint-config-airbnb"
    ],
    "jsRules": {
        "eofline": true,
        "object-literal-sort-keys": false,
        "align": false,
        "ter-arrow-parens": [
            true,
            "as-needed"
        ],
        "quotemark": [
            true,
            "single"
        ]
    },
    "rules": {
        "import-name": false,
        "object-literal-sort-keys": false,
        "align": false,
        "ordered-imports": false,
        "ter-arrow-parens": [
            true,
            "as-needed"
        ],
        "ter-indent": [
            true,
            4
        ],
        "prefer-array-literal": false,
        "interface-name": false,
        "max-line-length": [
            true,
            120
        ]
    },
    "rulesDirectory": [],
    "linterOptions": {
        "exclude": [
            "./lib"
        ]
    }
}
